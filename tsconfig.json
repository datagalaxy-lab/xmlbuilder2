{
  "compilerOptions": {
      "target": "es2015",
      "module": "CommonJS",
      "declaration": true,
      "lib": [
          "ES5"
      ],
      "strictBindCallApply": false,
      "downlevelIteration": true,
      "locale": "en",
      "strict": true,
      "newLine": "lf",
      "sourceMap": true,
      "esModuleInterop": true,
      "outDir": "lib",
      "types": [
          "node",
          "jest",
          "dedent"
      ]
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ]
}
